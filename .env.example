# Klarna API Credentials
# Get these from your Klarna Partner Portal or Klarna Developer Dashboard

# Your Klarna Username (Client ID)
KLARNA_USER_NAME=your_klarna_username_here
# Alternative name (for backwards compatibility):
# KLARNA_CLIENT_ID=your_klarna_client_id_here

# Your Klarna API Key / Password (keep this secure!)
KLARNA_PASSWORD=your_klarna_api_key_here
# Alternative name (for backwards compatibility):
# KLARNA_CLIENT_SECRET=your_klarna_client_secret_here

# Klarna Environment: 'sandbox' for testing, 'production' for live
KLARNA_ENVIRONMENT=sandbox

# Klarna Base URL (API endpoint)
KLARNA_BASE_URL=https://api-global.test.klarna.com

# Klarna Account ID
KLARNA_ACCOUNT_ID=krn:partner:global:account:test:MI5RSLGHURL

# Return/Callback URL (where Klarna redirects after verification)
KLARNA_RETURN_URL=https://siwk-kn-demo.vercel.app

# Server Port (optional, defaults to 3000)
PORT=3000
